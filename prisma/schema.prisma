// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  username  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String @map("created_by_id")

  @@index([username])
  @@map("post")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  username      String
  passwordHash  String @map("password_hash")
  emailVerified Int    @default(0) @map("email_verified")
  totpKey       Bytes? @map("totp_key")
  recoveryCode  Bytes  @map("recovery_code")

  sessions      Session[]
  emailRequests EmailVerificationRequest[]
  resetSessions PasswordResetSession[]
  posts         Post[]

  @@index([username])
  @@map("user")
}

model Session {
  id                String @id
  userId            String @map("user_id")
  user              User   @relation(fields: [userId], references: [id])
  expiresAt         Int    @map("expires_at")
  twoFactorVerified Int    @default(0) @map("two_factor_verified")

  @@map("session")
}

model EmailVerificationRequest {
  id        String @id
  userId    String
  user      User   @relation(fields: [userId], references: [id])
  email     String
  code      String
  expiresAt Int    @map("expires_at")

  @@map("email_verification_request")
}

model PasswordResetSession {
  id                String @id
  userId            String
  user              User   @relation(fields: [userId], references: [id])
  email             String
  code              String
  expiresAt         Int    @map("expires_at")
  emailVerified     Int    @default(0) @map("email_verified")
  twoFactorVerified Int    @default(0) @map("two_factor_verified")

  @@map("password_reset_session")
}
